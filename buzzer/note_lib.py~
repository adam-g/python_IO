import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BOARD)
GPIO.setup(7,GPIO.OUT)

scale = 0.01

def a_note():
    for i in range(0,int(round(250*scale))):
        GPIO.output(7, True)
        time.sleep(0.0023)
        GPIO.output(7, False)

def b_note():
    for i in range(0,int(round(255*scale))):
        GPIO.output(7, True)
        time.sleep(0.0020)
        GPIO.output(7, False)

def c_note():
    for i in range(0,int(round(260*scale))):
        GPIO.output(7, True)
        time.sleep(0.0019)
        GPIO.output(7, False)

def d_note():
    for i in range(0,int(round(290*scale))):
        GPIO.output(7, True)
        time.sleep(0.0017)
        GPIO.output(7, False)

def e_note():
    for i in range(0,int(round(330*scale))):
        GPIO.output(7, True)
        time.sleep(0.0015)
        GPIO.output(7, False)

def f_note():
    for i in range(0,int(round(350*scale))):
        GPIO.output(7, True)
        time.sleep(0.0014)
        GPIO.output(7, False)

def g_note():
    for i in range(0,int(round(392*scale))):
        GPIO.output(7, True)
        time.sleep(0.0013)
        GPIO.output(7, False)

def spanien_tune():
    c_note()
    time.sleep(0.01)
    d_note()
    time.sleep(0.01)
    e_note()
    e_note()
    time.sleep(0.01)
    c_note()
    time.sleep(0.01)
    d_note()
    time.sleep(0.01)
    e_note()
    e_note()
    time.sleep(0.01)
    d_note()
    time.sleep(0.01)
    d_note()
    time.sleep(0.01)
    d_note()
    time.sleep(0.01)
    d_note()
    time.sleep(0.01)
    c_note()
    c_note()
    time.sleep(0.01)
    c_note()
    c_note()
